<h2>Add Book</h2>

{{#if author}}
<h3>The following book has been added to the library:</h3>
<table class="table">
    <tr>
        <td>Title</th>
        <td>{{title}}</td>
    </tr>
    <tr>
        <td>Author</th>
        <td>{{author}}</td>
    </tr>
    <tr>
        <td>Publishing Date</th>
        <td>{{pubDate}}</td>
    </tr>
</table>

<a href="/">Back to Book List</a> | <a href="/delete?title={{title}}">Delete</a>

{{else}}
<form method="POST" action="/add">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Enter Title">
    </div>
    <div class="form-group">
        <label for="author">Author</label>
        <input type="text" class="form-control" id="author" name="author" placeholder="Password">
    </div>
    <div class="form-group">
        <label for="pubDate">Publishing Date</label>
        <input type="text" class="form-control" id="pubDate" name="pubDate" placeholder="1987">
    </div>

    <button type="submit" class="btn btn-primary">Add Book</button>
</form>

{{/if}}
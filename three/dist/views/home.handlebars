<h1>Web Books I Own</h1>

<form>
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" placeholder="Me Talk Pretty One Day">
    </div>
    <div class="form-group">
        <label for="author">Author Full Name</label>
        <input type="text" class="form-control" id="author" placeholder="David Sedaris">
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

{{#if book}}
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Title</td>
                <th>Author</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{book.title}}</td>
                <td>{{book.author}}</td>
            </tr>
        </tbody>
    </table>
{{else}}
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Title</td>
                <th>Author</td>
            </tr>
        </thead>
        <tbody>
            {{#each books}}
            <tr>
                <td>{{title}}</td>
                <td>{{author}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
{{/if}}

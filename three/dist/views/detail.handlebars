<h3>Details for {{title}}:</h3>


{{#if result}}
<table class="table">
    <tr>
        <td>Title</td>
        <td>{{result.title}} | <a href="/delete?title={{result.title}}">Delete</a></td>
    </tr>
    <tr>
        <td>Author</td>
        <td>{{result.author}}</td>
    </tr>
    <tr>
        <td>Publishing Date</td>
        <td>{{result.pubDate}}</td>
    </tr>
</table>

{{else}}
    <p>No books found</p>
{{/if}}

<a href="/">Back to Book List</a>
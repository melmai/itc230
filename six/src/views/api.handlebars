<form method="POST" action="/api/books">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" class="form-control" id="title" name="title" placeholder="Enter Title">
    </div>
    <div class="form-group">
        <label for="author">Author</label>
        <input type="text" class="form-control" id="author" name="author" placeholder="Password">
    </div>
    <div class="form-group">
        <label for="pubDate">Publishing Date</label>
        <input type="text" class="form-control" id="pubDate" name="pubDate" placeholder="1987">
    </div>

    <button type="submit" class="btn btn-primary">Add Book</button>
</form>